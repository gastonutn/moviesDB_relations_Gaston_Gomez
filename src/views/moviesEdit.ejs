<!DOCTYPE html>
<html lang="es">

<%- include('partials/head') %>
<body class="bg-dark text-center">
  <%- include('partials/header') %>
    
    <h3 class="titulo mt-5">Película Editada:  <%= Movie.title %></h3>
    <div class="container">
        <div class="row justify-content-center">
        <form action="/movies/update/<%= Movie.id %>?_method=put" method="POST" class="d-flex col-10 col-md-8 justify-content-center flex-wrap" enctype="multipart/form-data">
            <div class="col-10 col-md-8 mb-3 ">
              <label class="form-label" for="title">Title </label>
              <p><input class="form-control <%= locals.errors && (errors.title && 'is-invalid') %>" type="text" name="title" id="" value="<%= Movie.title %>"></p>
              <small class="text-danger ms-2">
                <%= locals.errors && (errors.title && errors.title.msg) %>
              </small>
            </div>
            <div class="col-10 col-md-8 mb-3 ">
              <label class="form-label" for="rating">Rating </label>
              <p><input class="form-control <%= locals.errors && (errors.rating && 'is-invalid') %>" type="number" name="rating" id="" value="<%= Movie.rating %>"></p>
              <small class="text-danger ms-2">
                <%= locals.errors && (errors.rating && errors.rating.msg) %>
              </small>
            </div>
            <div class="col-10 col-md-8 mb-3 ">
              <label class="form-label" for="awards">Awards </label>
              <p><input class="form-control <%= locals.errors && (errors.awards && 'is-invalid') %>" type="number" name="awards" id="" value="<%= Movie.awards %>"></p>
              <small class="text-danger ms-2">
                <%= locals.errors && (errors.awards && errors.awards.msg) %>
              </small>
            </div>
            <div class="col-10 col-md-8 mb-3 ">
              <label class="form-label" for="release_date">Release date </label>
              <p><input class="form-control <%= locals.errors && (errors.release_date && 'is-invalid') %>" type="date" name="release_date" id="" value="<%= moment(Movie.release_date).format('YYYY-MM-DD')%>"></p>
              <small class="text-danger ms-2">
                <%= locals.errors && (errors.release_date && errors.release_date.msg) %>
              </small>
            </div> 

            <div class="col-10 col-md-8 mb-3 ">
              <label class="form-label" for="length">Length </label>
              <p><input class="form-control <%= locals.errors && (errors.length && 'is-invalid') %>" type="number" name="length" id="" value="<%= Movie.length %>"></p>
              <small class="text-danger ms-2">
                <%= locals.errors && (errors.length && errors.length.msg) %>
              </small>
            </div>
            <div class="col-10 col-md-8 mb-3 ">
              <label class="form-label" for="genre_id">Genre </label>
              <p>
                <select name="genre_id" id="" class="form-control">
                    <% genres.forEach(genre => { %>
                    <option value="<%= genre.id %>" <% if (Movie.genre_id == genre.id) { %><%= 'selected' %><% }; %>><%= genre.name %></option>
                    <% }); %>
                </select>
               </p>
            </div>
            <div class="col-10 col-md-8 d-flex text-start flex-wrap">
                <div class="row">
                <% actors.forEach(actor => {%>
                    <div class="col-6 col-md-4">
                    <div class="form-check">
                        <input name='actors' class="form-check-input" type="checkbox" <%= Movie.actors.map(actor => actor.id).includes(actor.id) && 'checked'%>  value="<%= actor.id %>" id="flexCheckDefault" >
                        <label class="form-check-label" for="flexCheckDefault">
                          <%= actor.first_name  %>  <%= actor.last_name  %>
                        </label>
                      </div>
                    </div>
                    <%}); %>
                </div>
            </div>
            <div class="col-10 col-md-8 mb-3 ">
              <label class="form-label btn btn-secondary" for="image">Cambiar Imagen </label>
              <input class="form-control <%= locals.errors && (errors.length && 'is-invalid') %>" type="file" name="image" id="image" value="<%= Movie.image %>" hidden>
              <small class="text-danger ms-2">
                <%= locals.errors && (errors.image && errors.image.msg) %>
              </small>
            </div>
            <div class="col-10 col-md-8 mb-3 ">
             <button  class="btn" id="btns" type="submit">Actualizar</button>
        
            <a  class="btn" id="btn" href="/movies">Listado de Películas</a>
             </div>
        </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>

</html>