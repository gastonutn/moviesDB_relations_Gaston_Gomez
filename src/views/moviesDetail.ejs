                    <% actors.forEach(actor => {%>
                        <div class="col-6 col-md-4 mx-2">
                        <div class="form-check">
                           
                            <label class="form-check-label text-dark" for="flexCheckDefault">
                              <%= actor.first_name  %>  <%= actor.last_name  %>
                           Â </label>
                          </div>
                        </div>
                        <%}); %>
                    </div>
                </div>
              
                  </li>
                </ul>
                <div class="card-body d-flex justify-content-center flex-wrap gap-2">
                  <a  href="/movies/edit/<%= id %>" class="card-link btn" id="btn">Editar</a>
                  <!-- Button trigger modal -->
<button type="button" class="btn" id="btns" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Eliminar
</button>

