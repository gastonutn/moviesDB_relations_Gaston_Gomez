<!DOCTYPE html>
<html lang="es">

<%- include('partials/head') %>
  <body class="bg-dark text-white text-center">
    <%- include('partials/header') %>

   
    
    <h1 class="titulo mt-5">Agregar Película</h1>
   
   <div class="container">
    <div class="row">
        <form action="/movies/create" method="POST" class="d-flex justify-content-center flex-wrap" >
            <div class="col-10 col-md-8 mb-3 ">
                 <label for="title" class="form-label">Titulo</label>
                 <input type="text" class="form-control" name="title" >
              </div>
              <div class="col-10 col-md-8 mb-3 ">
                <label for="rating" class="form-label">Rating</label>
                <input type="text" class="form-control" name="rating" >
             </div>
             <div class="col-10 col-md-8 mb-3 ">
                <label for="awards" class="form-label">Awards</label>
                <input type="text" class="form-control" name="awards" >
             </div>
             <div class="col-10 col-md-8 mb-3 ">
                <label for="release_date" class="form-label">Fecha</label>
                <input type="date" class="form-control" name="release_date" >
             </div>
             <div class="col-10 col-md-8 mb-3 ">
                <label for="length" class="form-label">Duracion</label>
                <input type="text" class="form-control" name="length" >
             </div>
             <div class="col-10 col-md-8 mb-3 ">
             <label for="genreID" class="col12 col">Genero </label>
             <p>
                 <select class="form-select" name="genre_id" id="" >
                     <option value="" disabled selected>- seleccione el genero - </option>
                     <% genres.forEach(genre => { %>
                     <option value="<%= genre.id %>"><%= genre.name %></option>
                     <% }); %>
                 </select>
             </p>
            </div>
           <div class="col-10 col-md-8 mb-3 ">
               <button type="submit" class="btn btn-primary">Submit</button>

           </div>
          </form>
        </div>
    </div>
        
